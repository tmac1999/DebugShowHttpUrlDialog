<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#654"
        android:gravity="center"
        android:text="退出" />

    <TextView
        android:id="@+id/tv_request_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f"
        tools:text="tv_request_infotv_request_infotv_request_infotv_request_infotv_request_info" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0ff" />

    <TextView
        android:id="@+id/tv_response_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f"
        tools:text="tv_response_infotv_response_infotv_response_infotv_response_infotv_response_infotv_response_info" />

    <FrameLayout
        android:id="@+id/fl_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000" />

</LinearLayout>